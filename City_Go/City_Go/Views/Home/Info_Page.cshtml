@model City_Go.Models.PlacesModel

<!DOCTYPE html>
<html class="fsvs">
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="~/style/main.css">
    <link rel="stylesheet" type="text/css" href="~/style/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/style/fonts.css">
</head>
<body>
    <section id="info_page">
        <div class="container">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <h1>AntiCafe Campus</h1>
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row">
                <!--Photos from place-->

                <div class="col-md-9">
                    <div id="outer">
                        <div id="inner">
                            <div id="carousel-fc" class="carousel">
                                @foreach (var item in Model.Images)
                                {
                                    <img src="@item" width="400" height="300" />
                                }
                            </div>
                            <div id="carousel-zw" class="carousel">
                                @foreach (var item in Model.Images)
                                {
                                    <img src="@item" width="400" height="300" />
                                }
                            </div>
                            <div id="overlay"></div>
                            <a href="#" id="prev">&lsaquo;</a>
                            <a href="#" id="next">&rsaquo;</a>
                        </div>
                    </div>
                </div>
                <!--Info about place-->
                <div class="col-md-3">
                    @Html.Raw(Model.Description)
                </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="contact">
                        <h3><span class="locale">Контакты</span></h3>
                        @Html.Raw(Model.Contacts)
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="sled">
                        <img id="sledok" width="100%" src="~/img/3953.png">
                    </div>
                </div>

                <div class="col-md-5">
                    <div class="detailBox">
                        <div class="titleBox">
                            <label>Отзывы клиентов</label>
                            <button type="button" class="close" aria-hidden="true">&times;</button>
                        </div>
                        <!--<div class="commentBox">

                            <p class="taskDescription">Репутация кафе держится на отзывах ее постоянных клиентов!</p>
                        </div>-->
                        <div class="actionBox">
                            @*@Html.Partial("Reviews")*@
                            <form class="form-inline" role="form">
                                <div class="form-group">
                                    <input class="comment" type="text" placeholder="Ваш комментарий" />
                                </div>
                                <div class="form-group">
                                    <button class="comment_but">Добавить</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </section>

    <script src="~/js/jquery-2.2.3.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.carouFredSel-6.2.0-packed.js"></script>
    <script src="~/js/js.js"></script>
</body>
</html>
@model City_Go.Models.HtmlPageModel

@{
    ViewBag.Title = "Редактирование страницы";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}
<link href="~/css/prism.css" rel="stylesheet" />
<script src="~/Scripts/prism.js"></script>
<script src="~/Scripts/codemirror.js"></script>
<link href="~/css/codemirror.css" rel="stylesheet" />
<script>
  var editor = CodeMirror.fromTextArea(code, {
    lineNumbers: false
  });
</script>
@using (Html.BeginForm("Page", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", id = "form", @class = "form-horizontal" }))
{
    <input type="hidden" value="Model.ViewFile.Name" name="filename" />
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                 Редактирование страницы
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Главная</a></li>
                <li><a href="#">Страницы</a></li>
                <li class="active">Редактирование места</li>
            </ol>
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="col-sm-10 col-md-10">
                <div id="editor-field">
                    @Html.TextAreaFor(model => model.HtmlCode, new { id = "code", cols = "120", rows = "30" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-8"></div>
                <div class="col-sm-2">
                    <button type="submit" class="btn btn-block btn-success"> <i class="fa fa-save indent_pad"></i> Сохранить</button>
                </div>
            </div>

            </section>
        </div>
            }

